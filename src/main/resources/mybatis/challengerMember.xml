<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="challenger">
	<select id="list" resultType="ChallengerMember">
		SELECT * 
		FROM challenger c, member m, game g
		WHERE g.game_code = #{game_code} AND m.member_code = c.member_code
	</select>
	
	<insert id="add">
		INSERT INTO challenger
		VALUES (CHALLENGER_CODE_SEQ.nextval, #{member_code}, #{game_code}, '승인대기')
	</insert>
	
	<update id="update">
		UPDATE challenger
		SET state = '승인완료'
		WHERE game_code = #{game_code} AND member_code = #{member_code}
	</update>
	
	<delete id="delete">
		DELETE FROM challenger
		WHERE game_code=#{game_code}
	</delete>
		
	<select id="makerItem" resultType="Game">
		SELECT *
		FROM game
		WHERE game_code = #{game_code}
	</select>
</mapper>