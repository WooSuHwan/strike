<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="clan">
	<select id="list" resultType="Clan">
		SELECT * FROM clan
	</select>
	
	<insert id="add">
		INSERT INTO clan (clan_name,mem_id,clan_count,clan_win,clan_lost,clan_score)
		VALUES (#{clanName}, #{memId}, #{clanCount}, #{clanWin}, #{clanLost}, #{clanScore})
	</insert>
	
	<select id="item" resultType="Clan">
		SELECT * FROM clan
		WHERE T_NAME = #{clanName}
	</select>
	
	<update id="update">
		UPDATE clan 
		SET mem_id = #{memId},clan_count= #{clanCount},clan_win= #{clanWin},clan_lost= #{clanLost},clan_score= #{clanScore}
		WHERE clan_name = #{clanName}
	</update>
	
	<delete id="delete">
		DELETE FROM clan 
		WHERE clan_name = #{clanName}
	</delete>
	
	<select id="detail" resultType="Clan">
		SELECT * FROM clan
		WHERE clan_name = #{clanName}
	</select>
</mapper>