<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="clan">
	<select id="list" resultType="Clan">
		SELECT * FROM clan
	</select>
	
	<insert id="add">
		INSERT INTO clan
		VALUES (CLAN_CODE_SEQ.nextval, 
		#{member_code}, 
		#{clan_master}, 
		#{clan_name}, 
		#{clan_record}, 
		#{clan_win}, 
		#{clan_lost}, 
		#{clan_draw}, 
		#{clan_rate})
	</insert>
	
	<select id="item" resultType="Clan">
		SELECT * FROM clan
		WHERE member_code=#{member_code}
	</select>
	
	<update id="update">
		UPDATE clan
		SET clan_name=#{clan_name}
		WHERE member_code=#{member_code}
	</update>
	
	<delete id="delete">
		DELETE FROM clan
		WHERE member_code=#{member_code}
	</delete>
</mapper>