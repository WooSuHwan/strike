<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="game">
	<select id="list" resultType="Game">
		SELECT * FROM game
	</select>
	
	<insert id="add">
		INSERT INTO game
		VALUES (GAME_CODE_SEQ.nextval, #{member_code}, #{title}, #{name}, #{clan}, #{tier}, #{loc})
	</insert>
	
	<delete id="delete">
		DELETE FROM game
		WHERE game_code=#{game_code}
	</delete>
	
	<update id="update">
		UPDATE game
		SET title=#{title}, loc=#{loc}
		WHERE game_code=#{game_code}
	</update>
	
	<select id="item" resultType="Game">
		SELECT * FROM game
		WHERE game_code=#{game_code}
	</select>
</mapper>